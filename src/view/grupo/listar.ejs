<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="UTF-8">
    <title>Lista de Grupos</title>
</head>
<body>

    <h1>Gestão de Grupos</h1>

    <p>
        <a href="/grupos/novo">[ + ] Novo Grupo</a>
    </p>
    <p>
        <a href="/atividades">« Voltar para Atividades</a>
    </p>

    <% if (erro) { %>
        <p style="color: red;">Erro: <%= erro %></p>
    <% } %>

    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Empresa (ID)</th>
                <th>Número</th>
                <th>Nome do Grupo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% if (!lista || lista.length === 0) { %>
                <tr>
                    <td colspan="4">Nenhum grupo registado.</td>
                </tr>
            <% } else { %>
                
                <% lista.forEach(function(item) { %>
                    <tr>
                        <td><%= item.empresa %></td>
                        <td><%= item.numero %></td>
                        <td><%= item.nome %></td>
                        <td>
                            <a href="/grupos/editar/<%= item.empresa %>/<%= item.numero %>">Editar</a>

                            <form action="/grupos/<%= item.empresa %>/<%= item.numero %>?method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Tem a certeza que deseja excluir?');">
                                    Excluir
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }); %>

            <% } %>
        </tbody>
    </table>

</body>
</html>