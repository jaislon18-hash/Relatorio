<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="UTF-8">
    <title>Lista de Atividades</title>
</head>
<body>

    <h1>Gestão de Atividades</h1>

    <p>
        <a href="/atividades/novo">[ + ] Nova Atividade</a>
    </p>

    <% if (erro) { %>
        <p style="color: red;">Erro: <%= erro %></p>
    <% } %>

    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Mês/Ano</th>
                <th>Classificação</th>
                <th>Grupo</th>
                <th>Horas</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% if (lista.length === 0) { %>
                <tr>
                    <td colspan="6">Nenhum registo encontrado.</td>
                </tr>
            <% } else { %>
                
                <% lista.forEach(function(item) { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.mes %> / <%= item.ano %></td>
                        
                        <td><%= item.classificacao %></td>
                        <td><%= item.grupoEmpresa %> | <%= item.grupoNumero %></td>
                        
                        <td><%= item.horas %></td>
                        
                        <td>
                            <a href="/atividades/editar/<%= item.id %>">Editar</a>

                            <form action="/atividades/<%= item.id %>?method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Tem certeza?');">
                                    Excluir
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }); %>

            <% } %>
        </tbody>
    </table>

</body>
</html>