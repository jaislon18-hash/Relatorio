<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="UTF-8">
    <title>Lista de Classificações</title>
</head>
<body>

    <h1>Gestão de Classificações</h1>

    <p>
        <a href="/classificacoes/novo">[ + ] Nova Classificação</a>
    </p>
    
    <p>
        <a href="/atividades">« Voltar para Atividades</a>
    </p>

    <% if (erro) { %>
        <p style="color: red;">Erro: <%= erro %></p>
    <% } %>

    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% if (!lista || lista.length === 0) { %>
                <tr>
                    <td colspan="3">Nenhuma classificação encontrada.</td>
                </tr>
            <% } else { %>
                
                <% lista.forEach(function(item) { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.nome %></td>
                        <td>
                            <a href="/classificacoes/editar/<%= item.id %>">Editar</a>

                            <form action="/classificacoes/<%= item.id %>?method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Tem a certeza que deseja excluir?');">
                                    Excluir
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }); %>

            <% } %>
        </tbody>
    </table>

</body>
</html>